#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE    dc={{ ldap_server_domain_name.split('.')[0] }},dc={{ ldap_server_domain_name.split('.')[1] }}
{% if ldap_server_enable_ssl %}
URI     ldaps://localhost
TLS_REQCERT never
{% endif %}
{% if not ldap_server_enable_ssl %}
URI     ldap://localhost
{% endif %}

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never
#TLS_CACERTDIR /etc/openldap/cacerts
#TLS_CACERT /etc/openldap/certs/cert.crt
